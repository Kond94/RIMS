}

<div id="myCarousel" class="carousel slide " data-ride="carousel" data-interval="6000" style="width: 100%; margin: 0 auto;">

    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img src="~/images/Be_In_Control1280x720 .png" alt="RPMIS" class="" />

