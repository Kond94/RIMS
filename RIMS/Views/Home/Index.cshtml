@{
    ViewData["Title"] = "Home Page";
}

    <div id="myCarousel" class="carousel slide " data-ride="carousel" data-interval="6000" style="width: 70%; margin: 0 auto;">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/Main_Banner1280x720.png" alt="RPMIS" class="img-responsive carousel-item-img img-fluid center-block" />
                <div class="carousel-caption" role="option">
                    <p>
                        Technology & Poultry.
                        <a class="btn btn-default" href="">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/Be_In_Control1280x720 .png" alt="RPMIS" class="img-responsive carousel-item-img img-fluid center-block" />
                <div class="carousel-caption" role="option">
                    <p>
                        Know how your incubator is doing at all times.
                        <a class="btn btn-default" href="">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/Precise_Hatching1280x720.png" alt="RPMIS" class="img-responsive carousel-item-img img-fluid center-block" />
                <div class="carousel-caption" role="option">
                    <p>
                        Enable precision farming
                        <a class="btn btn-default" href="">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
